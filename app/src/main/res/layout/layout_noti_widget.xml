<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/close"
        android:layout_alignParentEnd="true"
        app:tint="@color/black"/>

        <RelativeLayout
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_below="@id/close"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_400sdp"
            android:background="@drawable/widget_background">

            <RelativeLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_70sdp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:alpha="0.1"/>

                <ImageView
                    android:layout_centerVertical="true"
                    android:id="@+id/appIcon"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:src="@drawable/app_icon"
                    android:layout_marginStart="@dimen/_15sdp"/>

               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   android:layout_marginHorizontal="@dimen/_15sdp"
                   android:layout_toEndOf="@id/appIcon"
                   android:layout_centerVertical="true">

                   <TextView
                       android:id="@+id/title"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Notification Title"
                       android:textColor="@color/white"
                       android:fontFamily="@font/poppins_semibold"
                       android:textSize="18sp"
                       android:includeFontPadding="false"/>

                   <TextView
                       android:id="@+id/message"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Notification Title Notification Title Notification Title Notification Title Notification Title Notification Title Notification Title"
                       android:textColor="@color/white"
                       android:ellipsize="end"
                       android:fontFamily="@font/poppins_regular"
                       android:textSize="12sp"
                       android:lines="2"
                       android:includeFontPadding="false"
                       />

               </LinearLayout>

            </RelativeLayout>

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp"
                android:src="@drawable/ic_launcher_background"
                android:scaleType="centerCrop"
                android:layout_marginVertical="@dimen/_15sdp"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_below="@id/header"
                android:layout_above="@id/action_button"/>

            <Button
                android:id="@+id/action_button"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:layout_alignParentBottom="true"
                android:layout_height="@dimen/_45sdp"
                android:text="Upload Image"
                android:shadowColor="@color/black"
                android:shadowDx="1.8"
                android:shadowDy="1.8"
                android:shadowRadius="0.1"
                android:fontFamily="@font/raleway_medium"
                android:textAllCaps="false"
                android:textSize="15sp"
                android:textColor="@color/mywhite"
                android:background="@drawable/new_button_bg"
                />
        </RelativeLayout>
</RelativeLayout>