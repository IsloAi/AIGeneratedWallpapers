<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_360sdp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
         android:paddingHorizontal="@dimen/_2sdp"
        >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/bottom_sheet_bg"
        android:paddingHorizontal="@dimen/_10sdp"
        android:paddingTop="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent=".9"
        app:layout_constraintHeight_percent=".99"
        >
        <ImageView
            android:id="@+id/closePopup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/cut_popup"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/closePopup"
            app:layout_constraintBottom_toBottomOf="parent"
            >
            <TextView
                android:id="@+id/totalGems"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:text="You have 40 gems "
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_2sdp"
                android:fontFamily="@font/raleway_medium"
                android:gravity="center"
                />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/topImage"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_120sdp"
        app:lottie_rawRes="@raw/couple3_diamond"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_gravity="center_horizontal"
        />
        <TextView
            android:id="@+id/unLockTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/_7sdp"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/raleway_medium"
            android:gravity="center"
            />
        <Button
            android:id="@+id/buttonGetWallpaper"
            android:layout_width="@dimen/_180sdp"
            android:layout_height="@dimen/_40sdp"
            android:gravity="center"
            android:text="Get Wallpaper"
            android:fontFamily="@font/raleway_medium"
            android:layout_marginTop="@dimen/_20sdp"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/set_button_bg_sel"
            />
            <TextView
                android:id="@+id/getMoreGems"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/button_bg"
                android:textSize="18sp"
                android:text="Get more Gems"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/raleway_medium"
                android:gravity="center"
                />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>