<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/exit_bottom_bg"
    android:backgroundTint="#2B2B2B">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/_15sdp"
        android:paddingVertical="@dimen/_20sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/confirmation_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:text="Info"
            android:textColor="@color/white"
            android:textSize="@dimen/_15sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/name_pl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:fontFamily="@font/poppins_medium"
            android:text="Name"
            android:textColor="@color/white"
            android:textSize="@dimen/_13sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/confirmation_txt" />


        <TextView
            android:id="@+id/tags_pl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="Tags"
            android:textColor="@color/white"
            android:textSize="@dimen/_13sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/name_pl" />


        <TextView
            android:id="@+id/size_pl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="Size"
            android:textColor="@color/white"
            android:textSize="@dimen/_13sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tags_pl" />


        <TextView
            android:id="@+id/capacity_pl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="Capacity"
            android:textColor="@color/white"
            android:textSize="@dimen/_13sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/size_pl" />


        <TextView
            android:id="@+id/image_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_13sdp"
            android:fontFamily="@font/poppins_medium"
            android:text="Name"
            android:textColor="#888888"
            android:textSize="@dimen/_13sdp"
            app:layout_constraintStart_toEndOf="@id/capacity_pl"
            app:layout_constraintTop_toTopOf="@id/name_pl"

            />

        <TextView
            android:id="@+id/image_tags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="Girl, Ai art, Cypher punk"
            android:textColor="#888888"
            android:textSize="@dimen/_13sdp"
            app:layout_constraintBottom_toBottomOf="@id/tags_pl"
            app:layout_constraintStart_toStartOf="@id/image_name"
            app:layout_constraintTop_toTopOf="@id/tags_pl" />

        <TextView
            android:id="@+id/image_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="3.15 MB"
            android:textColor="#888888"
            android:textSize="@dimen/_13sdp"
            app:layout_constraintBottom_toBottomOf="@id/size_pl"
            app:layout_constraintStart_toStartOf="@id/image_name"
            app:layout_constraintTop_toTopOf="@id/size_pl" />

        <TextView
            android:id="@+id/image_capacity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="4160 x 3144 (13.0MP)"
            android:textColor="#888888"
            android:textSize="@dimen/_13sdp"
            app:layout_constraintBottom_toBottomOf="@id/capacity_pl"
            app:layout_constraintStart_toStartOf="@id/image_name"
            app:layout_constraintTop_toTopOf="@id/capacity_pl" />

        <Button
            android:id="@+id/btnYes"
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/set_button_bg_sel"
            android:fontFamily="@font/poppins_semibold"

            android:gravity="center"
            android:text="OK"
            android:textAllCaps="false"
            android:textColor="@color/mywhite"
            android:textSize="@dimen/_13sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/capacity_pl"
            app:layout_constraintWidth_percent="0.9" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>